# Copy this file to terraform.tfvars and fill in your values
# cp terraform.tfvars.example terraform.tfvars

# AWS region to deploy to
aws_region = "us-east-1"

# EC2 instance type (t3.micro is free tier eligible)
instance_type = "t3.small"

# Project name (used for naming resources)
project_name = "browser-terminal"

# Your domain name (optional - leave empty to skip Route53 DNS setup)
# Note: You must have already created a Route53 hosted zone for this domain
domain_name = ""

# Path to your SSH public key
ssh_public_key_path = "~/.ssh/id_rsa.pub"

# CIDR block allowed to SSH (your IP for security, or 0.0.0.0/0 for anywhere)
# Find your IP: curl ifconfig.me
allowed_ssh_cidr = "0.0.0.0/0"
